<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".FinAnnonceActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="100dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter une Annonce"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Finalisation"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_background"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dashed_border">


                        <ImageView
                            android:id="@+id/imgCapture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_add_photo"
                            tools:ignore="UseAppTint"
                            android:layout_margin="10dp"/>




                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textViewAjoute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgCapture"
                        android:layout_marginBottom="-40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Ajouter des photos"
                        android:textSize="20dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etPrix"
                android:background="@drawable/white_background"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="189"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:inputType="number"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etTel"
                android:background="@drawable/white_background"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="+216 00 000 000"
                android:drawableLeft="@drawable/ic_baseline_ad_units_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:inputType="phone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/et_adresse"
                android:background="@drawable/white_background"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Adresse"
                android:drawableLeft="@drawable/ic_baseline_add_location_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:scrollbars="vertical" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lavender"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:progressDrawable="@drawable/custom_progress_bar"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="publier"
                android:id="@+id/btnPublier"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/lavender"
                app:cornerRadius = "20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>